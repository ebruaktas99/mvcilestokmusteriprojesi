@model Stok.Models.Entity.MUSTERILER

@{
    ViewBag.Title = "YeniMusteri";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form method="post" class="form-group">

    <div style="margin-top:15px;">
        <label>Müşteri Adı </label> <br />
        @Html.TextBoxFor(m => m.MUSTERIAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERIAD, "", new { @style = "color:red" })
    </div>


    <div style="margin-top:15px;">
        <label>Müşteri Soyadı</label><br />
        @Html.TextBoxFor(m => m.MUSTERISOYAD, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MUSTERISOYAD, "", new { @style = "color:red" })
    </div>

    <div>
          <button class="btn btn-info"style="margin-top:15px" id="btn1"> Müşteri Ekle</button>
    </div>

    <script>

        $('#btn1').click(function () {

            alert('Müşteri Ekleme İşlemi Yapıldı');

        });

    </script>
</form>

